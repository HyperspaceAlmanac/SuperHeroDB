@model IEnumerable<SuperHeroDB.Models.SuperHero>

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to the Super Hero Database!</h1>
<img src="~/Images/EditedHero.png" alt="Suit of armor with glowing sword and psychic energy in background" class="left-banner"/>
<img src="~/Images/EditedHero.png" alt="Suit of armor with glowing sword and psychic energy in background" class="right-banner" />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-heroID="@item.Id">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
  
            <td>
                <a asp-action="Edit" asp-route-heroIndex="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-heroIndex="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create">Add a Super Hero</a>
</p>
